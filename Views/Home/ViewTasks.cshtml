@{
    ViewData["Title"] = "View Tasks";
}
@model List<TaskResponse>

<div class="container">

    <div class="row">
        <div class="col-6">
            <h3>Quadrant 1</h3>
            <table class="table table-bordered table-primary table-striped">

                <thead class="font-weight-bold">

                    <tr>
                        <td>TaskId</td>

                        <td>Task</td>

                        <td>DueDate</td>

                        <td>Quadrant</td>

                        <td>Completed</td>

                        <td>Category</td>
                    </tr>

                </thead>

                <tbody>
                    @foreach (var x in Model.Where(x => x.Quadrant == "I"))
                    {
                        <tr>
                            <td>@x.TaskId</td>

                            <td>@x.Task</td>

                            <td>@x.DueDate</td>

                            <td>@x.Quadrant</td>

                            <td>@x.Completed</td>

                            <td>@x.Category.CategoryName</td>

                            <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskId">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

